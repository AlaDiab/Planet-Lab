{
  "version": "0.0.0",
  "private": true,
  "name": "PlanetLab",
  "description": "A gamified citizen science network for youth",
  "repository": "https://github.com/freedomgames/Planet-Lab",
  "license": "BSD3",
  "devDependencies": {
    "execSync": "^1.0.1",
    "karma": "^0.12.16",
    "karma-chrome-launcher": "^0.1.4",
    "karma-firefox-launcher": "^0.1.3",
    "karma-jasmine": "^0.1.5",
    "protractor": "~1.0.0",
    "tmp": "0.0.23",
    "bower": "^1.3.1",
    "shelljs": "^0.2.6"
  },
  "scripts": {
    "postinstall": "bower install",

    "prestart": "npm install",
    "start": "cd .. && source venv/bin/activate && foreman start dev_server -e .test_env",

    "pretest": "npm install",
    "test": "node node_modules/karma/bin/karma start test/karma.conf.js --single-run",

    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",

    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/protractor-conf.js",

    "preprotractor-debug": "npm run update-webdriver",
    "protractor-debug": "protractor debug test/protractor-conf.js",

    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + cat('bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\""
  }
}
